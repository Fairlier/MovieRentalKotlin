<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".fragment.clientMovieRating.ViewClientMovieRatingFragment">

    <data>
        <variable
            name="viewModel"
            type="com.example.movierentalkotlin.viewmodel.clientMovieRating.ViewClientMovieRatingViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/menu_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            style="@style/Widget.MaterialComponents.Toolbar.Primary" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/client_card_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Клиент: "
                            android:textColor="@android:color/darker_gray" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="4dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="16dp">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="100dp"
                                    android:layout_height="150dp"
                                    app:cardCornerRadius="16dp"
                                    app:cardElevation="0dp">

                                    <ImageView
                                        android:id="@+id/client_image"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:scaleType="centerCrop"
                                        app:imageUrl="@{viewModel.clientMovieRatingWithDetailsDto.clientImageUrl}" />
                                </androidx.cardview.widget.CardView>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/client_full_name"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@{viewModel.clientMovieRatingWithDetailsDto.clientFullName}"
                                        android:textColor="@android:color/black"
                                        android:textStyle="bold" />

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="4dp"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/client_date_of_birth_label"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Дата рождения: "
                                            android:textColor="@android:color/darker_gray" />

                                        <TextView
                                            android:id="@+id/client_date_of_birth"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@{viewModel.clientMovieRatingWithDetailsDto.clientDateOfBirth}"
                                            android:textColor="@android:color/black" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="4dp"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/client_address_label"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Адрес: "
                                            android:textColor="@android:color/darker_gray" />

                                        <TextView
                                            android:id="@+id/client_address"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@{viewModel.clientMovieRatingWithDetailsDto.clientAddress}"
                                            android:textColor="@android:color/black" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="4dp"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/client_phone_number_label"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Номер телефона: "
                                            android:textColor="@android:color/darker_gray" />

                                        <TextView
                                            android:id="@+id/client_phone_number"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@{viewModel.clientMovieRatingWithDetailsDto.clientPhoneNumber}"
                                            android:textColor="@android:color/black" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="4dp"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/client_date_of_registration_label"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Дата регистрации: "
                                            android:textColor="@android:color/darker_gray" />

                                        <TextView
                                            android:id="@+id/client_date_of_registration"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@{viewModel.clientMovieRatingWithDetailsDto.clientDateOfRegistration}"
                                            android:textColor="@android:color/black" />
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/movie_card_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Фильм: "
                            android:textColor="@android:color/darker_gray" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="4dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="16dp"
                                android:orientation="horizontal">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="100dp"
                                    android:layout_height="150dp"
                                    app:cardCornerRadius="16dp"
                                    app:cardElevation="0dp">

                                    <ImageView
                                        android:id="@+id/movie_image"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:scaleType="centerCrop"
                                        app:imageUrl="@{viewModel.clientMovieRatingWithDetailsDto.movieImageUrl}" />
                                </androidx.cardview.widget.CardView>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/movie_title"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@{viewModel.clientMovieRatingWithDetailsDto.movieTitle}"
                                        android:textColor="@android:color/black"
                                        android:textStyle="bold" />

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="4dp"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/movie_release_year_label"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Год: "
                                            android:textColor="@android:color/darker_gray" />

                                        <TextView
                                            android:id="@+id/movie_release_year"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@{viewModel.clientMovieRatingWithDetailsDto.movieReleaseYear}"
                                            android:textColor="@android:color/black" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="4dp"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/movie_country_label"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Страна: "
                                            android:textColor="@android:color/darker_gray" />

                                        <TextView
                                            android:id="@+id/movie_country"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@{viewModel.clientMovieRatingWithDetailsDto.movieCountry}"
                                            android:textColor="@android:color/black" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="4dp"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/movie_director_label"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Режиссер: "
                                            android:textColor="@android:color/darker_gray" />

                                        <TextView
                                            android:id="@+id/movie_director"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@{viewModel.clientMovieRatingWithDetailsDto.movieDirector}"
                                            android:textColor="@android:color/black" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="4dp"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/movie_duration_label"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Длительность: "
                                            android:textColor="@android:color/darker_gray" />

                                        <TextView
                                            android:id="@+id/movie_duration"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@{String.valueOf(viewModel.clientMovieRatingWithDetailsDto.movieDuration)}"
                                            android:textColor="@android:color/black" />
                                    </LinearLayout>
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/movie_rating_cost_layout"
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:orientation="vertical"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="parent">

                                    <TextView
                                        android:id="@+id/movie_average_rating"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="end"
                                        android:text="@{String.valueOf(viewModel.clientMovieRatingWithDetailsDto.movieAverageRating)}"
                                        android:textColor="@android:color/black" />

                                    <Space
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="1" />

                                    <TextView
                                        android:id="@+id/movie_rental_cost"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="end"
                                        android:text="@{String.valueOf(viewModel.clientMovieRatingWithDetailsDto.movieRentalCost)}"
                                        android:textColor="@android:color/black" />
                                </LinearLayout>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/client_movie_rating_rating_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Оценка: "
                            android:textColor="@android:color/darker_gray" />

                        <TextView
                            android:id="@+id/client_movie_rating_rating"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@{String.valueOf(viewModel.clientMovieRatingWithDetailsDto.rating)}"
                            android:textColor="@android:color/black" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/client_movie_rating_comment_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Комментарий: "
                            android:textColor="@android:color/darker_gray" />

                        <TextView
                            android:id="@+id/client_movie_rating_comment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@{viewModel.clientMovieRatingWithDetailsDto.comment}"
                            android:textColor="@android:color/black" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</layout>